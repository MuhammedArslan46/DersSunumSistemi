@{
    ViewData["Title"] = "Admin Panel";
    var fullName = User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value ?? User.Identity?.Name;
}

<div class="container">
    <div class="mb-4">
        <h1><i class="bi bi-speedometer2"></i> Admin Paneli</h1>
        <p class="text-muted">Hoş geldiniz, @fullName</p>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card stats-card primary">
                <div class="stats-icon">
                    <i class="bi bi-people"></i>
                </div>
                <h3>@ViewBag.UserCount</h3>
                <p class="text-muted mb-0">Kullanıcı</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stats-card success">
                <div class="stats-icon">
                    <i class="bi bi-person-badge"></i>
                </div>
                <h3>@ViewBag.InstructorCount</h3>
                <p class="text-muted mb-0">Akademisyen</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stats-card info">
                <div class="stats-icon">
                    <i class="bi bi-book"></i>
                </div>
                <h3>@ViewBag.CourseCount</h3>
                <p class="text-muted mb-0">Ders</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stats-card warning">
                <div class="stats-icon">
                    <i class="bi bi-file-earmark-slides"></i>
                </div>
                <h3>@ViewBag.PresentationCount</h3>
                <p class="text-muted mb-0">Materyal</p>
            </div>
        </div>
    </div>

    <!-- Management Cards -->
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-people"></i> Kullanıcı Yönetimi</h5>
                    <p class="card-text">Kullanıcıları ve akademisyenleri yönetin</p>
                    <a asp-action="Users" class="btn btn-primary">
                        <i class="bi bi-arrow-right-circle"></i> Yönet
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person-plus-fill"></i> Ders Atama</h5>
                    <p class="card-text">Akademisyenlere ders atayın</p>
                    <a asp-action="AssignCourses" class="btn btn-success">
                        <i class="bi bi-arrow-right-circle"></i> Ata
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-building"></i> Bölüm Yönetimi</h5>
                    <p class="card-text">Akademik bölümleri yönetin</p>
                    <a asp-action="Departments" class="btn btn-primary">
                        <i class="bi bi-arrow-right-circle"></i> Yönet
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-folder"></i> Kategori Yönetimi</h5>
                    <p class="card-text">Ders kategorilerini yönetin</p>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-right-circle"></i> Yönet
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>