@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Admin Paneli</h2>
        <div>
            <span class="me-3">Hoşgeldin, @Context.Session.GetString("UserName")</span>
            <a asp-action="Logout" class="btn btn-danger">Çıkış</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Kategoriler</h5>
                    <h2>@ViewBag.CategoryCount</h2>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-light">Yönet</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Dersler</h5>
                    <h2>@ViewBag.CourseCount</h2>
                    <a asp-controller="Courses" asp-action="Index" class="btn btn-light">Yönet</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Sunumlar</h5>
                    <h2>@ViewBag.PresentationCount</h2>
                    <a asp-controller="Presentations" asp-action="Index" class="btn btn-light">Yönet</a>
                </div>
            </div>
        </div>
    </div>
</div>