@model IEnumerable<DersSunumSistemi.Models.Department>

@{
    ViewData["Title"] = "Bölüm Yönetimi";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-building"></i> Bölüm Yönetimi</h1>
        <a asp-action="CreateDepartment" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Yeni Bölüm Ekle
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        @foreach (var department in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@department.Name</h5>
                            <span class="badge bg-primary">@department.Code</span>
                        </div>

                        @if (department.Faculty != null)
                        {
                            <p class="text-muted small mb-2">
                                <i class="bi bi-building me-1"></i>@department.Faculty.Name
                                @if (department.Faculty.Institution != null)
                                {
                                    <br><small class="text-muted">@department.Faculty.Institution.Name</small>
                                }
                            </p>
                        }

                        @if (!string.IsNullOrEmpty(department.Description))
                        {
                            <p class="card-text text-muted small">@department.Description</p>
                        }

                        <hr>

                        <div class="row text-center g-2">
                            <div class="col-6">
                                <div class="border rounded p-2">
                                    <div class="text-primary fw-bold">@department.Instructors.Count</div>
                                    <small class="text-muted">Akademisyen</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="border rounded p-2">
                                    <div class="text-success fw-bold">@department.Courses.Count</div>
                                    <small class="text-muted">Ders</small>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3">
                            <button type="button" class="btn btn-sm btn-outline-danger w-100"
                                    data-bs-toggle="modal" data-bs-target="#deleteModal-@department.Id">
                                <i class="bi bi-trash me-2"></i>Sil
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Delete Modal -->
                <div class="modal fade" id="deleteModal-@department.Id" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Bölümü Sil</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <strong>@department.Name</strong> bölümünü silmek istediğinize emin misiniz?
                                @if (department.Instructors.Any())
                                {
                                    <div class="alert alert-warning mt-3 mb-0">
                                        <i class="bi bi-exclamation-triangle me-2"></i>
                                        Bu bölümde @department.Instructors.Count akademisyen bulunmaktadır!
                                    </div>
                                }
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                <form asp-action="DeleteDepartment" asp-route-id="@department.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger">Sil</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle me-2"></i>
            Henüz bölüm eklenmemiş. Yeni bölüm eklemek için yukarıdaki butonu kullanın.
        </div>
    }
</div>
