@model DersSunumSistemi.Models.Instructor

@{
    ViewData["Title"] = "Akademisyen Düzenle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Akademisyen Düzenle</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="EditInstructor" asp-route-id="@Model.Id">
                        <div class="mb-3">
                            <label for="fullName" class="form-label">Ad Soyad</label>
                            <input type="text" class="form-control" id="fullName" name="fullName" value="@Model.FullName" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">E-posta</label>
                                <input type="email" class="form-control" id="email" name="email" value="@Model.Email" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="phone" class="form-label">Telefon</label>
                                <input type="text" class="form-control" id="phone" name="phone" value="@Model.Phone">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="title" class="form-label">Ünvan</label>
                            <input type="text" class="form-control" id="title" name="title" value="@Model.Title"
                                   placeholder="Örn: Prof. Dr., Doç. Dr., Dr. Öğr. Üyesi">
                        </div>

                        <div class="mb-3">
                            <label for="departmentId" class="form-label">Bölüm</label>
                            <select class="form-select" id="departmentId" name="departmentId" required>
                                @if (ViewBag.Departments != null)
                                {
                                    @foreach (var dept in ViewBag.Departments as List<DersSunumSistemi.Models.Department>)
                                    {
                                        @if (dept.Id == Model.DepartmentId)
                                        {
                                            <option value="@dept.Id" selected>@dept.Name - @dept.Faculty!.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@dept.Id">@dept.Name - @dept.Faculty!.Name</option>
                                        }
                                    }
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Durum</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="isActive" name="isActive" @(Model.IsActive ? "checked" : "")>
                                <label class="form-check-label" for="isActive">
                                    Aktif
                                </label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="startDate" class="form-label">İşe Başlama Tarihi</label>
                                <input type="date" class="form-control" id="startDate" name="startDate"
                                       value="@(Model.StartDate?.ToString("yyyy-MM-dd"))">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="endDate" class="form-label">İşten Çıkış Tarihi</label>
                                <input type="date" class="form-control" id="endDate" name="endDate"
                                       value="@(Model.EndDate?.ToString("yyyy-MM-dd"))">
                                <div class="form-text">Sadece ayrılmış akademisyenler için</div>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Kullanıcı Adı:</strong> @Model.User?.UserName
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Güncelle
                            </button>
                            <a asp-action="Users" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
