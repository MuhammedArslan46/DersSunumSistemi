@{
    ViewData["Title"] = "Yeni Bölüm Ekle";
    var faculties = ViewBag.Faculties as List<DersSunumSistemi.Models.Faculty>;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Yeni Bölüm Ekle</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (faculties == null || !faculties.Any())
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Uyarı!</strong> Bölüm eklemek için önce fakülte eklemeniz gerekiyor.
                        </div>
                    }
                    else
                    {
                        <form method="post" asp-action="CreateDepartment">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="name" class="form-label">Bölüm Adı <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="name" name="name"
                                           placeholder="Örn: Bilgisayar Mühendisliği" required>
                                    <div class="form-text">Bölümün tam adını girin</div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="code" class="form-label">Bölüm Kodu <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="code" name="code"
                                           placeholder="Örn: BLM" required maxlength="10">
                                    <div class="form-text">Kısa kod (max 10 karakter)</div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="facultyId" class="form-label">Fakülte <span class="text-danger">*</span></label>
                                <select class="form-select" id="facultyId" name="facultyId" required>
                                    <option value="">Fakülte seçin...</option>
                                    @foreach (var faculty in faculties)
                                    {
                                        <option value="@faculty.Id">
                                            @faculty.Name @(!string.IsNullOrEmpty(faculty.Institution?.Name) ? $"({faculty.Institution.Name})" : "")
                                        </option>
                                    }
                                </select>
                                <div class="form-text">Bölümün bağlı olduğu fakülteyi seçin</div>
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label">Açıklama</label>
                                <textarea class="form-control" id="description" name="description" rows="4"
                                          placeholder="Bölüm hakkında kısa açıklama yazın..."></textarea>
                                <div class="form-text">İsteğe bağlı: Bölüm hakkında detaylı bilgi</div>
                            </div>

                            <hr>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle me-2"></i>Kaydet
                                </button>
                                <a asp-action="Departments" class="btn btn-secondary">
                                    <i class="bi bi-x-circle me-2"></i>İptal
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>

            @if (faculties != null && faculties.Any())
            {
                <div class="card mt-4">
                    <div class="card-body">
                        <h6 class="text-muted mb-3"><i class="bi bi-info-circle me-2"></i>Mevcut Fakülteler</h6>
                        <div class="row g-2">
                            @foreach (var faculty in faculties)
                            {
                                <div class="col-md-6">
                                    <div class="badge bg-light text-dark border d-block text-start p-2">
                                        <strong>@faculty.Name</strong>
                                        @if (faculty.Institution != null)
                                        {
                                            <br><small class="text-muted">@faculty.Institution.Name</small>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
