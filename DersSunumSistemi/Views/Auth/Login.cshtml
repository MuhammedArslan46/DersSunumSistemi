@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="login-wrapper">
        <div class="row g-0 shadow-lg">
            <!-- Left Side - Login Form -->
            <div class="col-lg-6">
                <div class="login-form-side">
                    <div class="login-header text-center mb-4">
                        <div class="login-logo mb-3">
                            <img src="~/images.png" alt="MTÜ Logo" height="80" />
                        </div>
                        <h2 class="fw-bold mb-2" style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Hoş Geldiniz</h2>
                        <h5 class="text-primary fw-bold mb-1">MTÜ Dersleri Platformu</h5>
                        <p class="text-muted small">Malatya Turgut Özal Üniversitesi</p>
                        <p class="text-muted small">Lisansüstü Eğitim Enstitüsü</p>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post" asp-action="Login" asp-controller="Auth">
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="userName" name="userName"
                                   placeholder="Kullanıcı Adı" required>
                            <label for="userName"><i class="bi bi-person me-2"></i>Kullanıcı Adı</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input type="password" class="form-control" id="password" name="password"
                                   placeholder="Şifre" required>
                            <label for="password"><i class="bi bi-lock me-2"></i>Şifre</label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-3 mb-3">
                            <span style="position: relative; z-index: 1;">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                            </span>
                        </button>

                        <div class="text-center mt-4">
                            <p class="text-muted mb-0">
                                <i class="bi bi-info-circle me-1"></i>
                                Hesap oluşturma işlemleri admin tarafından yapılmaktadır.
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Right Side - Welcome -->
            <div class="col-lg-6">
                <div class="login-info-side">
                    <div class="info-content text-center">
                        <div class="mb-5">
                            <img src="~/images.png" alt="MTÜ Logo" height="120" class="mb-4" style="background: white; padding: 15px; border-radius: 20px;" />
                            <h3 class="fw-bold mb-3">Malatya Turgut Özal Üniversitesi</h3>
                            <h5 class="mb-3" style="color: var(--accent-color);">Lisansüstü Eğitim Enstitüsü</h5>
                            <p class="mb-4 px-4">Ders Materyalleri Platformu</p>
                        </div>

                        <div class="features">
                            <div class="feature-item mb-4">
                                <div class="feature-icon-wrapper mb-3">
                                    <i class="bi bi-book-fill" style="font-size: 2.5rem;"></i>
                                </div>
                                <h6 class="fw-bold mb-2">Ders Materyallerine Erişim</h6>
                                <p class="small" style="opacity: 0.9;">Lisansüstü ders materyallerine kolayca erişin</p>
                            </div>
                            <div class="feature-item mb-4">
                                <div class="feature-icon-wrapper mb-3">
                                    <i class="bi bi-person-workspace" style="font-size: 2.5rem;"></i>
                                </div>
                                <h6 class="fw-bold mb-2">Akademisyenlerinizi Takip Edin</h6>
                                <p class="small" style="opacity: 0.9;">Hocalarınızın paylaştığı güncel içeriklere ulaşın</p>
                            </div>
                            <div class="feature-item">
                                <div class="feature-icon-wrapper mb-3">
                                    <i class="bi bi-cloud-download-fill" style="font-size: 2.5rem;"></i>
                                </div>
                                <h6 class="fw-bold mb-2">İndir ve Çalış</h6>
                                <p class="small" style="opacity: 0.9;">Tüm materyalleri cihazınıza indirin</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
