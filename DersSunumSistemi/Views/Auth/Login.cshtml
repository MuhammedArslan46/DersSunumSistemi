@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="login-wrapper">
        <div class="row g-0 shadow-lg">
            <!-- Left Side - Login Form -->
            <div class="col-lg-6">
                <div class="login-form-side">
                    <div class="login-header text-center mb-4">
                        <div class="login-icon mb-3">
                            <i class="bi bi-mortarboard-fill"></i>
                        </div>
                        <h2 class="fw-bold mb-2" style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Hoş Geldiniz</h2>
                        <p class="text-muted">Lisansüstü Ders Platformu'na giriş yapın</p>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post" asp-action="Login" asp-controller="Auth">
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="userName" name="userName"
                                   placeholder="Kullanıcı Adı" required>
                            <label for="userName"><i class="bi bi-person me-2"></i>Kullanıcı Adı</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input type="password" class="form-control" id="password" name="password"
                                   placeholder="Şifre" required>
                            <label for="password"><i class="bi bi-lock me-2"></i>Şifre</label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-3 mb-3">
                            <span style="position: relative; z-index: 1;">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                            </span>
                        </button>

                        <div class="text-center mt-4">
                            <p class="text-muted mb-0">
                                <i class="bi bi-info-circle me-1"></i>
                                Hesap oluşturma işlemleri admin tarafından yapılmaktadır.
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Right Side - Welcome & Demo Accounts -->
            <div class="col-lg-6">
                <div class="login-info-side">
                    <div class="info-content">
                        <h3 class="fw-bold mb-4">Akademik Başarınız İçin</h3>
                        <p class="mb-4">Lisansüstü eğitim materyallerine kolayca erişin, derslerinizi takip edin ve akademik başarınızı artırın.</p>

                        <div class="features mb-5">
                            <div class="feature-item">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                <span>Ders Materyallerine Anında Erişim</span>
                            </div>
                            <div class="feature-item">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                <span>Akademisyenlerinizi Takip Edin</span>
                            </div>
                            <div class="feature-item">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                <span>Güncel Ders İçerikleri</span>
                            </div>
                        </div>

                        <div class="demo-accounts">
                            <h6 class="fw-bold mb-3">
                                <i class="bi bi-key-fill me-2"></i>Demo Hesaplar
                                <small class="d-block mt-2 fw-normal" style="font-size: 0.85rem; opacity: 0.9;">
                                    <i class="bi bi-info-circle me-1"></i>Tıklayarak otomatik doldur
                                </small>
                            </h6>
                            <div class="demo-card mb-2">
                                <div class="d-flex align-items-center">
                                    <div class="demo-icon bg-danger">
                                        <i class="bi bi-shield-fill-check"></i>
                                    </div>
                                    <div class="ms-3">
                                        <strong class="d-block">Admin</strong>
                                        <small class="text-white-50">admin / admin123</small>
                                    </div>
                                    <i class="bi bi-arrow-right ms-auto" style="font-size: 1.2rem; opacity: 0.7;"></i>
                                </div>
                            </div>
                            <div class="demo-card mb-2">
                                <div class="d-flex align-items-center">
                                    <div class="demo-icon bg-success">
                                        <i class="bi bi-person-badge"></i>
                                    </div>
                                    <div class="ms-3">
                                        <strong class="d-block">Akademisyen</strong>
                                        <small class="text-white-50">ahmet.yilmaz / instructor123</small>
                                    </div>
                                    <i class="bi bi-arrow-right ms-auto" style="font-size: 1.2rem; opacity: 0.7;"></i>
                                </div>
                            </div>
                            <div class="demo-card">
                                <div class="d-flex align-items-center">
                                    <div class="demo-icon bg-info">
                                        <i class="bi bi-person-circle"></i>
                                    </div>
                                    <div class="ms-3">
                                        <strong class="d-block">Öğrenci</strong>
                                        <small class="text-white-50">mehmet.kaya / student123</small>
                                    </div>
                                    <i class="bi bi-arrow-right ms-auto" style="font-size: 1.2rem; opacity: 0.7;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
