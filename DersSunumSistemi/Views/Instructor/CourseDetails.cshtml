@model DersSunumSistemi.Models.Course

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="MyCourses">Derslerim</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <!-- Course Info -->
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0">@Model.Name</h4>
                    <p class="text-muted mb-0">@Model.Code</p>
                </div>
                <div>
                    <a asp-action="EditCourse" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        <i class="bi bi-pencil me-2"></i>Düzenle
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Kategori:</strong> @Model.Category?.Name</p>
                    <p><strong>Kredi:</strong> @Model.Credits</p>
                    @if (!string.IsNullOrEmpty(Model.Semester))
                    {
                        <p><strong>Dönem:</strong> @Model.Semester @Model.Year</p>
                    }
                </div>
                <div class="col-md-6">
                    <p><strong>Materyal Sayısı:</strong> @Model.Presentations.Count</p>
                    <p><strong>Durum:</strong>
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                            @(Model.IsActive ? "Aktif" : "Pasif")
                        </span>
                    </p>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <hr>
                <p><strong>Açıklama:</strong></p>
                <p>@Model.Description</p>
            }

            @if (!string.IsNullOrEmpty(Model.Syllabus))
            {
                <hr>
                <p><strong>Ders İçeriği:</strong></p>
                <p style="white-space: pre-line;">@Model.Syllabus</p>
            }
        </div>
    </div>

    <!-- Presentations -->
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-file-earmark-slides"></i> Ders Materyalleri</h5>
                <a asp-action="CreatePresentation" asp-route-courseId="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Yeni Materyal Ekle
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Presentations.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Başlık</th>
                                <th>Tür</th>
                                <th>Hafta</th>
                                <th>Dosya</th>
                                <th>Görüntülenme</th>
                                <th>İndirme</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var presentation in Model.Presentations.OrderBy(p => p.Week))
                            {
                                <tr>
                                    <td><strong>@presentation.Title</strong></td>
                                    <td>
                                        <span class="badge bg-info">@presentation.Type</span>
                                    </td>
                                    <td>@(presentation.Week.HasValue ? $"Hafta {presentation.Week}" : "-")</td>
                                    <td>
                                        <small>
                                            @presentation.FileName<br>
                                            <span class="text-muted">(@((presentation.FileSize / 1024.0 / 1024.0).ToString("F2")) MB)</span>
                                        </small>
                                    </td>
                                    <td>@presentation.ViewCount</td>
                                    <td>@presentation.DownloadCount</td>
                                    <td>
                                        <span class="badge @(presentation.IsPublished ? "bg-success" : "bg-warning")">
                                            @(presentation.IsPublished ? "Yayında" : "Taslak")
                                        </span>
                                    </td>
                                    <td>
                                        <form asp-action="DeletePresentation" asp-route-id="@presentation.Id" method="post"
                                              onsubmit="return confirm('Bu materyali silmek istediğinize emin misiniz?');"
                                              class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle me-2"></i>
                    Henüz materyal eklenmemiş. Yeni materyal eklemek için yukarıdaki butonu kullanın.
                </div>
            }
        </div>
    </div>
</div>
