@model IEnumerable<DersSunumSistemi.Models.Course>

@{
    ViewData["Title"] = "Derslerim";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-book"></i> Derslerim</h1>
        <a asp-action="CreateCourse" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Yeni Ders Ekle
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var course in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">@course.Name</h5>
                                <span class="badge @(course.IsActive ? "bg-success" : "bg-secondary")">
                                    @(course.IsActive ? "Aktif" : "Pasif")
                                </span>
                            </div>
                            <p class="text-muted small mb-2">@course.Code</p>

                            @if (!string.IsNullOrEmpty(course.Description))
                            {
                                var desc = course.Description;
                                var shortDesc = desc.Length > 100 ? desc.Substring(0, 100) + "..." : desc;
                                <p class="card-text">@shortDesc</p>
                            }

                            <div class="d-flex justify-content-between text-muted small mb-3">
                                <span><i class="bi bi-folder me-1"></i>@course.Category?.Name</span>
                                <span><i class="bi bi-file-earmark-slides me-1"></i>@course.Presentations.Count materyal</span>
                            </div>

                            <div class="btn-group w-100">
                                <a asp-action="CourseDetails" asp-route-id="@course.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-eye"></i> Görüntüle
                                </a>
                                <a asp-action="EditCourse" asp-route-id="@course.Id" class="btn btn-outline-secondary">
                                    <i class="bi bi-pencil"></i> Düzenle
                                </a>
                                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@course.Id">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Modal -->
                    <div class="modal fade" id="deleteModal-@course.Id" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Dersi Sil</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <strong>@course.Name</strong> dersini silmek istediğinize emin misiniz? Bu işlem geri alınamaz ve tüm materyaller de silinecektir.
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                    <form asp-action="DeleteCourse" asp-route-id="@course.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger">Sil</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
            <h5>Henüz ders eklenmemiş</h5>
            <p class="mb-3">Yeni ders ekleyerek başlayabilirsiniz.</p>
            <a asp-action="CreateCourse" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>İlk Dersimi Ekle
            </a>
        </div>
    }
</div>
