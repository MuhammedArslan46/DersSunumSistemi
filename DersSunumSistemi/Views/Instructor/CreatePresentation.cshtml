@{
    ViewData["Title"] = "Yeni Materyal Ekle";
    var course = ViewBag.Course as DersSunumSistemi.Models.Course;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Yeni Materyal Ekle</h4>
                    <p class="text-muted mb-0">Ders: @course.Name (@course.Code)</p>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post" asp-action="CreatePresentation" asp-route-courseId="@course.Id" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title" class="form-label">Materyal Başlığı</label>
                            <input type="text" class="form-control" id="title" name="title" required>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Açıklama</label>
                            <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="type" class="form-label">Materyal Türü</label>
                                <select class="form-select" id="type" name="type" required>
                                    <option value="">Tür Seçin</option>
                                    <option value="1">Ders (Lecture)</option>
                                    <option value="2">Alıştırma (Exercise)</option>
                                    <option value="3">Sınav (Exam)</option>
                                    <option value="4">Proje (Project)</option>
                                    <option value="5">Doküman (Document)</option>
                                    <option value="6">Video</option>
                                    <option value="7">Diğer (Other)</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="week" class="form-label">Hafta</label>
                                <input type="number" class="form-control" id="week" name="week" min="1" max="16" placeholder="Opsiyonel">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="file" class="form-label">Dosya</label>
                            <input type="file" class="form-control" id="file" name="file" required>
                            <div class="form-text">Maksimum dosya boyutu: 100MB</div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="isPublished" name="isPublished" checked>
                                <label class="form-check-label" for="isPublished">
                                    Hemen Yayınla
                                </label>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-upload me-2"></i>Yükle
                            </button>
                            <a asp-action="CourseDetails" asp-route-id="@course.Id" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
