@{
    ViewData["Title"] = "Yeni Ders Ekle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Yeni Ders Ekle</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post" asp-action="CreateCourse">
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label for="name" class="form-label">Ders Adı</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="code" class="form-label">Ders Kodu</label>
                                <input type="text" class="form-control" id="code" name="code" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Açıklama</label>
                            <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="syllabus" class="form-label">Ders İçeriği / Müfredat</label>
                            <textarea class="form-control" id="syllabus" name="syllabus" rows="5"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="categoryId" class="form-label">Kategori</label>
                                <select class="form-select" id="categoryId" name="categoryId" required>
                                    <option value="">Kategori Seçin</option>
                                    @if (ViewBag.Categories != null)
                                    {
                                        @foreach (var category in ViewBag.Categories as List<DersSunumSistemi.Models.Category>)
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="credits" class="form-label">Kredi</label>
                                <input type="number" class="form-control" id="credits" name="credits" value="3" min="1" max="10">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="semester" class="form-label">Dönem</label>
                                <select class="form-select" id="semester" name="semester">
                                    <option value="">Dönem Seçin</option>
                                    <option value="Güz">Güz</option>
                                    <option value="Bahar">Bahar</option>
                                    <option value="Yaz">Yaz</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="year" class="form-label">Akademik Yıl</label>
                            <input type="number" class="form-control" id="year" name="year" value="@DateTime.Now.Year" min="2020" max="2030">
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Kaydet
                            </button>
                            <a asp-action="MyCourses" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
