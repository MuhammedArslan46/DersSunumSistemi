@model DersSunumSistemi.Models.Course

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a asp-action="Category" asp-route-id="@Model.CategoryId">@Model.Category?.Name</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h2>@Model.Name</h2>
                            <p class="text-muted mb-0">@Model.Code</p>
                        </div>
                        <span class="badge bg-info text-dark">@Model.Category?.Name</span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="lead">@Model.Description</p>
                    }

                    @if (!string.IsNullOrEmpty(Model.Syllabus))
                    {
                        <hr>
                        <h5>Ders İçeriği</h5>
                        <p style="white-space: pre-line;">@Model.Syllabus</p>
                    }
                </div>
            </div>

            <!-- Presentations -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-slides"></i> Ders Materyalleri</h5>
                </div>
                <div class="card-body">
                    @if (Model.Presentations.Any())
                    {
                        <div class="list-group">
                            @foreach (var presentation in Model.Presentations.OrderBy(p => p.Week))
                            {
                                <a asp-controller="Home" asp-action="Presentation" asp-route-id="@presentation.Id"
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">
                                                <i class="bi bi-file-earmark-@(presentation.FileType == "pdf" ? "pdf" : "text") me-2"></i>
                                                @presentation.Title
                                            </h6>
                                            @if (!string.IsNullOrEmpty(presentation.Description))
                                            {
                                                <p class="mb-1 text-muted small">@presentation.Description</p>
                                            }
                                            <small class="text-muted">
                                                @if (presentation.Week.HasValue)
                                                {
                                                    <span class="me-3">Hafta @presentation.Week</span>
                                                }
                                                <span class="me-3"><i class="bi bi-eye me-1"></i>@presentation.ViewCount</span>
                                                <span><i class="bi bi-download me-1"></i>@presentation.DownloadCount</span>
                                            </small>
                                        </div>
                                        <span class="badge bg-primary">@presentation.Type</span>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center mb-0">
                            <i class="bi bi-info-circle me-2"></i>
                            Henüz materyal eklenmemiş.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Instructor Info -->
            @if (Model.Instructor != null)
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Öğretim Görevlisi</h5>
                        <div class="d-flex align-items-center mb-3">
                            @if (!string.IsNullOrEmpty(Model.Instructor.ImagePath))
                            {
                                <img src="@Model.Instructor.ImagePath" alt="@Model.Instructor.FullName"
                                     class="rounded-circle me-3" style="width: 60px; height: 60px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center me-3"
                                     style="width: 60px; height: 60px; font-size: 1.5rem;">
                                    @Model.Instructor.FullName.Substring(0, 1).ToUpper()
                                </div>
                            }
                            <div>
                                <h6 class="mb-0">@Model.Instructor.FullName</h6>
                                @if (!string.IsNullOrEmpty(Model.Instructor.Title))
                                {
                                    <small class="text-muted">@Model.Instructor.Title</small>
                                }
                            </div>
                        </div>
                        <p class="text-muted small mb-2">
                            <i class="bi bi-building me-1"></i>@Model.Instructor.Department?.Name
                        </p>
                        <a asp-action="Instructor" asp-route-id="@Model.Instructor.Id" class="btn btn-outline-primary btn-sm w-100">
                            Profili Görüntüle
                        </a>
                    </div>
                </div>
            }

            <!-- Course Info -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-3">Ders Bilgileri</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <strong>Kredi:</strong> @Model.Credits
                        </li>
                        @if (!string.IsNullOrEmpty(Model.Semester))
                        {
                            <li class="mb-2">
                                <strong>Dönem:</strong> @Model.Semester @Model.Year
                            </li>
                        }
                        <li class="mb-2">
                            <strong>Materyal Sayısı:</strong> @Model.Presentations.Count
                        </li>
                        <li class="mb-2">
                            <strong>Toplam Görüntülenme:</strong> @Model.Presentations.Sum(p => p.ViewCount)
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
