@model DersSunumSistemi.Models.Course

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Ana Sayfa</a></li>
            <li class="breadcrumb-item">
                <a asp-action="Category" asp-route-id="@Model.CategoryId">@Model.Category?.Name</a>
            </li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0"><i class="bi bi-book"></i> @Model.Name</h3>
                </div>
                <div class="card-body">
                    <p class="lead">@Model.Description</p>
                    <hr />
                    <div class="row">
                        <div class="col-md-6">
                            <p><i class="bi bi-person-circle"></i> <strong>Eğitmen:</strong> @Model.Instructor</p>
                        </div>
                        <div class="col-md-6">
                            <p><i class="bi bi-calendar"></i> <strong>Oluşturma:</strong> @Model.CreatedDate.ToString("dd.MM.yyyy")</p>
                        </div>
                        <div class="col-md-6">
                            <p><i class="bi bi-folder"></i> <strong>Kategori:</strong> @Model.Category?.Name</p>
                        </div>
                        <div class="col-md-6">
                            <p><i class="bi bi-file-earmark-slides"></i> <strong>Sunum Sayısı:</strong> @Model.Presentations.Count</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Bilgi</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        <span class="badge bg-primary">@Model.Category?.Name</span>
                    </p>
                    <p class="mb-2">
                        <small class="text-muted">
                            Toplam @Model.Presentations.Count sunum bulunmaktadır.
                        </small>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <h4 class="mb-3"><i class="bi bi-file-earmark-slides"></i> Sunumlar</h4>

    @if (Model.Presentations.Any())
    {
        <div class="row g-3">
            @foreach (var presentation in Model.Presentations.OrderByDescending(p => p.UploadDate))
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm hover-card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-file-earmark-pdf text-danger"></i>
                                @presentation.Title
                            </h5>
                            <p class="card-text text-muted small">@presentation.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i> @presentation.UploadDate.ToString("dd.MM.yyyy")
                                </small>
                                @if (!string.IsNullOrEmpty(presentation.FilePath))
                                {
                                    <a asp-controller="Presentations" asp-action="Download" asp-route-id="@presentation.Id"
                                       class="btn btn-sm btn-primary">
                                        <i class="bi bi-download"></i> İndir
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i>
            Bu derste henüz sunum bulunmamaktadır.
        </div>
    }
</div>

<style>
    .hover-card {
        transition: all 0.3s ease;
        border-left: 3px solid #0d6efd;
    }
    .hover-card:hover {
        transform: translateX(5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1) !important;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
