@model DersSunumSistemi.Models.Instructor

@{
    ViewData["Title"] = Model.FullName;
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a asp-action="Instructors">Akademisyenler</a></li>
            <li class="breadcrumb-item active">@Model.FullName</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Model.ImagePath" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" alt="@Model.FullName">
                    }
                    else
                    {
                        <div class="instructor-avatar mx-auto mb-3">
                            <i class="bi bi-person"></i>
                        </div>
                    }
                    <h4>@Model.FullName</h4>
                    <p class="text-muted">@Model.Title</p>
                    <p class="text-muted">
                        <i class="bi bi-building"></i> @Model.Department?.Name
                    </p>
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <p class="small"><i class="bi bi-envelope"></i> @Model.Email</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <p class="small"><i class="bi bi-telephone"></i> @Model.Phone</p>
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title">İstatistikler</h6>
                    <hr>
                    <div class="d-flex justify-content-between mb-2">
                        <span><i class="bi bi-book"></i> Toplam Ders:</span>
                        <strong>@Model.Courses.Count</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span><i class="bi bi-file-earmark-slides"></i> Toplam Materyal:</span>
                        <strong>@Model.Courses.Sum(c => c.Presentations.Count)</strong>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            @if (!string.IsNullOrEmpty(Model.Bio))
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-info-circle"></i> Hakkında</h5>
                        <p class="card-text">@Model.Bio</p>
                    </div>
                </div>
            }

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-3"><i class="bi bi-book"></i> Dersler (@Model.Courses.Count)</h5>

                    @if (Model.Courses.Any())
                    {
                        <div class="row g-3">
                            @foreach (var course in Model.Courses)
                            {
                                <div class="col-md-6">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h6 class="card-title">@course.Code</h6>
                                            <p class="card-text mb-2">@course.Name</p>
                                            <div class="d-flex gap-2 mb-2">
                                                <span class="badge bg-info text-dark">@course.Category?.Name</span>
                                                <span class="badge bg-secondary">@course.Credits Kredi</span>
                                            </div>
                                            <div class="d-flex justify-content-between text-muted small">
                                                <span><i class="bi bi-file-earmark-slides"></i> @course.Presentations.Count Materyal</span>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <a asp-action="Course" asp-route-id="@course.Id" class="btn btn-sm btn-primary">
                                                <i class="bi bi-arrow-right-circle"></i> Dersi Görüntüle
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Henüz ders bulunmuyor.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
