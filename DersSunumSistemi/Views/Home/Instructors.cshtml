@model IEnumerable<DersSunumSistemi.Models.Instructor>

@{
    ViewData["Title"] = "Akademisyenler";
}

<div class="container">
    <div class="mb-4">
        <h1><i class="bi bi-person-badge"></i> Akademisyenler</h1>
        <p class="text-muted">Tüm akademisyenlere göz atın</p>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var instructor in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card instructor-card h-100">
                        <div class="card-body text-center">
                            @if (!string.IsNullOrEmpty(instructor.ImagePath))
                            {
                                <img src="@instructor.ImagePath" class="instructor-avatar mb-3" alt="@instructor.FullName">
                            }
                            else
                            {
                                <div class="instructor-avatar mb-3">
                                    <i class="bi bi-person"></i>
                                </div>
                            }
                            <h5 class="card-title">@instructor.FullName</h5>
                            <p class="text-muted mb-2">@instructor.Title</p>
                            <p class="text-muted small mb-3">
                                <i class="bi bi-building"></i> @instructor.Department?.Name
                            </p>
                            @if (!string.IsNullOrEmpty(instructor.Bio))
                            {
                                <p class="card-text small text-muted">
                                    @{
                                        var bio = instructor.Bio.Length > 100 ? instructor.Bio.Substring(0, 100) + "..." : instructor.Bio;
                                    }
                                    @bio
                                </p>
                            }
                            <div class="d-flex justify-content-center gap-2 mb-3">
                                <span class="badge bg-info text-dark">
                                    <i class="bi bi-book"></i> @instructor.Courses.Count Ders
                                </span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-action="Instructor" asp-route-id="@instructor.Id" class="btn btn-primary w-100">
                                <i class="bi bi-arrow-right-circle"></i> Profili Görüntüle
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
            <h5>Henüz akademisyen bulunmuyor</h5>
        </div>
    }
</div>
