@model IEnumerable<DersSunumSistemi.Models.Course>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<div class="hero-section text-center mb-5">
    <div class="container">
        <img src="~/images.png" alt="MTÜ Logo" height="100" class="mb-4" style="background: white; padding: 10px; border-radius: 15px;" />
        <h1 class="display-4 fw-bold mb-3">MTÜ Dersleri Platformu</h1>
        <p class="lead mb-4">Malatya Turgut Özal Üniversitesi - Lisansüstü Eğitim Enstitüsü</p>
    </div>
</div>

<!-- Welcome Content -->
<div class="container">
    <div class="row g-4 mb-5 justify-content-center">
        @if (User.IsInRole("Admin"))
        {
            <div class="col-md-5">
                <div class="card h-100 text-center p-4 feature-card">
                    <div class="feature-icon mb-4" style="background: linear-gradient(135deg, var(--secondary-color) 0%, #a01729 100%);">
                        <i class="bi bi-person-badge"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Akademisyenler</h5>
                    <p class="text-muted mb-4">Akademisyenleri keşfedin ve ders materyallerine ulaşın.</p>
                    <a href="@Url.Action("Instructors", "Home")" class="btn btn-outline-primary mt-auto">
                        <i class="bi bi-arrow-right-circle me-2"></i>Görüntüle
                    </a>
                </div>
            </div>
        }
        <div class="col-md-5">
            <div class="card h-100 text-center p-4 feature-card">
                <div class="feature-icon mb-4" style="background: linear-gradient(135deg, var(--accent-color) 0%, #b8941f 100%);">
                    <i class="bi bi-book"></i>
                </div>
                <h5 class="fw-bold mb-3">Ders Materyalleri</h5>
                <p class="text-muted mb-4">Ders materyallerine kolayca erişin ve indirin.</p>
                <div class="mt-auto">
                    <span class="badge bg-primary px-4 py-2" style="font-size: 1rem;">
                        <i class="bi bi-check-circle me-1"></i>@Model.Count() Aktif Ders
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.feature-card {
    border: 1px solid transparent;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.feature-card:hover {
    border-color: var(--primary-color);
}

.feature-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto;
    border-radius: 1rem;
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    color: white;
    box-shadow: 0 10px 15px -3px rgba(26, 58, 126, 0.3);
}

.cta-card {
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    border: 2px solid var(--gray-200);
}
</style>
