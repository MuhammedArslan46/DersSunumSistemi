@model DersSunumSistemi.Models.Institution

@{
    ViewData["Title"] = Model.Name + " - Fakülteler";
}

<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Institutions">Kurumlar</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <!-- Başlık -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold">
                <i class="bi bi-building"></i> @Model.Name
            </h2>
            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <p class="text-muted">@Model.Description</p>
            }
            <hr>
        </div>
    </div>

    <!-- Fakülteler Listesi -->
    @if (Model.Faculties.Any())
    {
        <h4 class="mb-3">
            <i class="bi bi-grid-3x3-gap"></i> Fakülteler
            <span class="badge bg-secondary">@Model.Faculties.Count</span>
        </h4>

        <div class="list-group">
            @foreach (var faculty in Model.Faculties.OrderBy(f => f.Name))
            {
                <a asp-action="FacultyDepartments" asp-route-id="@faculty.Id"
                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                    <div>
                        <h5 class="mb-1">
                            <i class="bi bi-mortarboard text-primary"></i> @faculty.Name
                        </h5>
                        <small class="text-muted">Kod: @faculty.Code</small>
                        @if (!string.IsNullOrWhiteSpace(faculty.Description))
                        {
                            <br><small class="text-muted">@faculty.Description</small>
                        }
                    </div>
                    <div>
                        <span class="badge bg-primary rounded-pill me-2">@faculty.Departments.Count Bölüm</span>
                        <i class="bi bi-chevron-right"></i>
                    </div>
                </a>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Bu kuruma ait henüz fakülte bulunmuyor.
        </div>
    }
</div>

@section Styles {
<style>
    .list-group-item {
        border-left: 4px solid transparent;
        transition: all 0.2s ease;
    }

    .list-group-item:hover {
        border-left-color: #0d6efd;
        background-color: #f8f9fa;
        transform: translateX(5px);
    }
</style>
}
