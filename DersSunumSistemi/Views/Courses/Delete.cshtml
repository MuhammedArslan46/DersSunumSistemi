@model DersSunumSistemi.Models.Course

@{
    ViewData["Title"] = "Ders Sil";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Ders Sil</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-circle"></i>
                        <strong>Dikkat!</strong> Bu dersi silmek istediğinizden emin misiniz?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Ders Adı:</dt>
                        <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

                        <dt class="col-sm-3">Kategori:</dt>
                        <dd class="col-sm-9"><span class="badge bg-primary">@Model.Category?.Name</span></dd>

                        <dt class="col-sm-3">Eğitmen:</dt>
                        <dd class="col-sm-9">@Model.Instructor</dd>

                        <dt class="col-sm-3">Açıklama:</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Sunum Sayısı:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@Model.Presentations.Count</span>
                        </dd>

                        <dt class="col-sm-3">Oluşturma:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>
                    </dl>

                    @if (Model.Presentations.Count > 0)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>Uyarı!</strong> Bu derse ait @Model.Presentations.Count adet sunum bulunmaktadır.
                            Dersi silerseniz bu sunumlar da silinebilir!
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
