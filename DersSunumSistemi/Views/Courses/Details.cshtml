@model DersSunumSistemi.Models.Course

@{
    ViewData["Title"] = "Ders Detayı";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-book"></i> @Model.Name</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Ders Adı:</dt>
                        <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

                        <dt class="col-sm-3">Kategori:</dt>
                        <dd class="col-sm-9"><span class="badge bg-primary">@Model.Category?.Name</span></dd>

                        <dt class="col-sm-3">Eğitmen:</dt>
                        <dd class="col-sm-9">@Model.Instructor</dd>

                        <dt class="col-sm-3">Açıklama:</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Oluşturma:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>
                    </dl>

                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Düzenle
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Sil
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Geri
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-slides"></i> Sunumlar</h5>
                </div>
                <div class="card-body">
                    @if (Model.Presentations.Count > 0)
                    {
                        <ul class="list-group">
                            @foreach (var presentation in Model.Presentations.OrderByDescending(p => p.UploadDate))
                            {
                                <li class="list-group-item">
                                    <strong>@presentation.Title</strong>
                                    <br />
                                    <small class="text-muted">@presentation.UploadDate.ToString("dd.MM.yyyy")</small>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted text-center">Henüz sunum eklenmemiş.</p>
                    }

                    <a asp-controller="Presentations" asp-action="Create" asp-route-courseId="@Model.Id" class="btn btn-sm btn-primary w-100 mt-3">
                        <i class="bi bi-plus-circle"></i> Sunum Ekle
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
