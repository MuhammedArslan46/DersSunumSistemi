<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lisansüstü Ders Platformu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard-fill fs-4 me-2"></i>
                    <span class="fw-bold">Lisansüstü Ders Platformu</span>
                </a>
            }
            else
            {
                <a class="navbar-brand d-flex align-items-center" asp-controller="Auth" asp-action="Login">
                    <i class="bi bi-mortarboard-fill fs-4 me-2"></i>
                    <span class="fw-bold">Lisansüstü Ders Platformu</span>
                </a>
            }
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item position-static" id="institutionsDropdown">
                            <a class="nav-link" href="#" id="institutionsToggle">
                                <i class="bi bi-building"></i> Kurumlar <i class="bi bi-chevron-down ms-1"></i>
                            </a>
                            <div class="mega-menu-container" id="institutionsMegaMenu" style="display: none;">
                                <div class="mega-menu-content">
                                    <div class="d-flex">
                                        <div class="institutions-list border-end" style="width: 350px; max-height: 500px; overflow-y: auto;">
                                            <div class="p-3 text-center">
                                                <div class="spinner-border spinner-border-sm text-primary" role="status">
                                                    <span class="visually-hidden">Yükleniyor...</span>
                                                </div>
                                                <span class="ms-2">Kurumlar yükleniyor...</span>
                                            </div>
                                        </div>
                                        <div class="faculties-list" style="width: 350px; max-height: 500px; overflow-y: auto;">
                                            <div class="p-4 text-center text-muted">
                                                <i class="bi bi-arrow-left-circle fs-3 d-block mb-2"></i>
                                                <small>Bir kurum seçin</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        @{
                            var userRole = User.Claims.FirstOrDefault(c => c.Type == "Role")?.Value;
                        }
                        @if (userRole == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Instructors">
                                    <i class="bi bi-person-badge"></i> Akademisyenler
                                </a>
                            </li>
                        }
                    </ul>
                }

                @if (User.Identity?.IsAuthenticated == true)
                {
                    var role = User.Claims.FirstOrDefault(c => c.Type == "Role")?.Value;
                    var fullName = User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value ?? User.Identity.Name;

                    <ul class="navbar-nav">
                        @if (role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-speedometer2"></i> Admin Paneli
                                </a>
                            </li>
                        }
                        else if (role == "Instructor")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Instructor" asp-action="Dashboard">
                                    <i class="bi bi-speedometer2"></i> Panelim
                                </a>
                            </li>
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> @fullName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                @if (role == "Instructor")
                                {
                                    <li><a class="dropdown-item" asp-controller="Instructor" asp-action="Profile">
                                        <i class="bi bi-person"></i> Profilim
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                }
                                <li>
                                    <form method="post" asp-controller="Auth" asp-action="Logout" class="d-inline">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                            </a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Sidebar Toggle Button -->
        <button class="sidebar-toggle-btn active" id="sidebarToggle">
            <i class="bi bi-chevron-left"></i>
        </button>

        <!-- Sidebar Menu -->
        <div class="sidebar-wrapper" id="sidebar">
            <ul class="sidebar-menu" id="sidebarMenuList">
                <!-- Menü dinamik olarak yüklenecek -->
                <li class="text-center p-3">
                    <div class="spinner-border spinner-border-sm text-light" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                    <span class="ms-2 text-light">Menü yükleniyor...</span>
                </li>
            </ul>
        </div>
    }

    <main class="@(User.Identity?.IsAuthenticated == true ? "main-content-wrapper" : "py-4")">
        @if (TempData["Success"] != null)
        {
            <div class="container">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="container">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="bi bi-mortarboard-fill me-2"></i>Lisansüstü Ders Platformu</h5>
                    <p class="text-white-50">Akademisyenlerin lisansüstü ders materyallerini öğrencilerle paylaşabileceği modern platform</p>
                </div>
                <div class="col-md-3">
                    <h6>Hızlı Linkler</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50 text-decoration-none">Hakkımızda</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">İletişim</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-white-50 text-decoration-none">Gizlilik</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>İletişim</h6>
                    <p class="text-white-50 small mb-1"><i class="bi bi-envelope me-2"></i>info@university.edu</p>
                    <p class="text-white-50 small mb-1"><i class="bi bi-telephone me-2"></i>+90 (212) 123 45 67</p>
                </div>
            </div>
            <hr class="bg-white-50">
            <div class="text-center text-white-50 small">
                &copy; @DateTime.Now.Year Lisansüstü Ders Platformu. Tüm hakları saklıdır.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Mega Menu Navigation
        var institutionsData = [];
        var institutionsLoaded = false;

        // Load institutions immediately on page load
        $(document).ready(function() {
            console.log('Document ready, loading institutions...');
            loadInstitutions();
        });

        // Also load when dropdown is shown (backup)
        $('#institutionsDropdown').on('show.bs.dropdown', function () {
            console.log('Dropdown shown, loaded status:', institutionsLoaded);
            if (!institutionsLoaded) {
                loadInstitutions();
            }
        });

        function loadInstitutions() {
            console.log('Loading institutions from API...');
            $.ajax({
                url: '@Url.Action("GetInstitutionsMenu", "Home")',
                method: 'GET',
                dataType: 'json',
                success: function (data) {
                    console.log('SUCCESS: Institutions loaded:', data);
                    console.log('Data length:', data ? data.length : 0);
                    institutionsData = data;
                    institutionsLoaded = true;
                    renderInstitutions(data);
                },
                error: function (xhr, status, error) {
                    console.error('ERROR loading institutions:', error);
                    console.error('Status:', status);
                    console.error('Response:', xhr.responseText);
                    $('.institutions-list').html('<div class="p-3 text-danger"><i class="bi bi-exclamation-triangle"></i> Hata: ' + error + '</div>');
                }
            });
        }

        function renderInstitutions(institutions) {
            console.log('Rendering institutions:', institutions);

            if (!institutions || institutions.length === 0) {
                console.log('No institutions to render');
                $('.institutions-list').html('<div class="p-3 text-muted text-center">Kurum bulunamadı</div>');
                return;
            }

            var html = '<div class="list-group list-group-flush">';

            // Group by type
            var universities = institutions.filter(function(i) { return i.type === 'University'; });
            var institutes = institutions.filter(function(i) { return i.type === 'Institute'; });

            console.log('Universities:', universities.length, 'Institutes:', institutes.length);

            if (universities.length > 0) {
                html += '<div class="p-3 bg-light border-bottom"><small class="text-muted fw-bold"><i class="bi bi-building me-2"></i>ÜNİVERSİTELER</small></div>';
                universities.forEach(function(inst) {
                    html += '<a href="#" class="list-group-item list-group-item-action institution-item" data-id="' + inst.id + '" data-name="' + inst.name + '">';
                    html += '<div class="d-flex align-items-center">';
                    html += '<i class="bi bi-building text-primary me-2"></i>';
                    html += '<span>' + inst.name + '</span>';
                    html += '<i class="bi bi-chevron-right ms-auto"></i>';
                    html += '</div></a>';
                });
            }

            if (institutes.length > 0) {
                html += '<div class="p-3 bg-light border-bottom"><small class="text-muted fw-bold"><i class="bi bi-bank me-2"></i>ENSTİTÜLER</small></div>';
                institutes.forEach(function(inst) {
                    html += '<a href="#" class="list-group-item list-group-item-action institution-item" data-id="' + inst.id + '" data-name="' + inst.name + '">';
                    html += '<div class="d-flex align-items-center">';
                    html += '<i class="bi bi-bank text-success me-2"></i>';
                    html += '<span>' + inst.name + '</span>';
                    html += '<i class="bi bi-chevron-right ms-auto"></i>';
                    html += '</div></a>';
                });
            }

            html += '</div>';
            console.log('Generated HTML length:', html.length);
            $('.institutions-list').html(html);
            console.log('HTML inserted into DOM');

            // Add hover events
            $('.institution-item').on('mouseenter', function (e) {
                e.preventDefault();
                var instId = $(this).data('id');
                var instName = $(this).data('name');
                console.log('Hovering institution:', instName, instId);
                $('.institution-item').removeClass('active');
                $(this).addClass('active');
                loadFaculties(instId, instName);
            });

            // Load first institution's faculties by default
            if (universities.length > 0 || institutes.length > 0) {
                var firstInst = universities.length > 0 ? universities[0] : institutes[0];
                console.log('Loading first institution faculties:', firstInst.name);
                $('.institution-item').first().addClass('active');
                loadFaculties(firstInst.id, firstInst.name);
            }
        }

        function loadFaculties(institutionId, institutionName) {
            const institution = institutionsData.find(i => i.id === institutionId);

            if (!institution || !institution.faculties || institution.faculties.length === 0) {
                $('.faculties-list').html(`
                    <div class="p-4 text-center text-muted">
                        <i class="bi bi-inbox fs-3 d-block mb-2"></i>
                        <div class="mb-2"><strong>${institutionName}</strong></div>
                        <small>Bu kuruma ait fakülte bulunamadı</small>
                    </div>
                `);
                return;
            }

            let html = '<div class="list-group list-group-flush">';
            html += `<div class="p-3 bg-light border-bottom">
                <small class="text-muted fw-bold"><i class="bi bi-mortarboard me-2"></i>${institutionName.toUpperCase()}</small>
            </div>`;

            institution.faculties.forEach(faculty => {
                html += `<a href="@Url.Action("FacultyDepartments", "Home")?id=${faculty.id}"
                    class="list-group-item list-group-item-action faculty-item"
                    data-id="${faculty.id}">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-mortarboard text-info me-2"></i>
                        <span>${faculty.name}</span>
                        <i class="bi bi-chevron-right ms-auto"></i>
                    </div>
                </a>`;
            });

            html += '</div>';
            $('.faculties-list').html(html);

            // Add hover events for departments preview
            $('.faculty-item').on('mouseenter', function () {
                $('.faculty-item').removeClass('active');
                $(this).addClass('active');
            });
        }

        // Show/Hide mega menu on hover
        var hideTimeout;

        $('#institutionsDropdown, #institutionsMegaMenu').on('mouseenter', function() {
            console.log('Mouse entered dropdown area');
            clearTimeout(hideTimeout);
            $('#institutionsMegaMenu').stop(true, true).fadeIn(200);
        });

        $('#institutionsDropdown, #institutionsMegaMenu').on('mouseleave', function() {
            console.log('Mouse left dropdown area');
            hideTimeout = setTimeout(function() {
                $('#institutionsMegaMenu').stop(true, true).fadeOut(200);
            }, 300);
        });

        // Prevent default link behavior
        $('#institutionsToggle').on('click', function(e) {
            e.preventDefault();
        });

        // Sidebar Collapsible Menu
        $('.sidebar-menu-link').on('click', function(e) {
            e.preventDefault();

            var $button = $(this);
            var targetId = $button.data('target');
            var $submenu = $('#' + targetId);

            // Toggle the submenu
            $submenu.toggleClass('show');

            // Toggle the icon rotation
            $button.toggleClass('expanded');

            // Close other submenus (optional - for accordion style)
            $('.sidebar-submenu').not($submenu).removeClass('show');
            $('.sidebar-menu-link').not($button).removeClass('expanded');
        });

        // Sidebar Toggle Functionality
        $('#sidebarToggle').on('click', function() {
            var $sidebar = $('#sidebar');
            var $mainContent = $('main.main-content-wrapper');
            var $toggleBtn = $(this);

            // Toggle sidebar
            $sidebar.toggleClass('collapsed');
            $mainContent.toggleClass('sidebar-collapsed');
            $toggleBtn.toggleClass('active');

            // Store state in localStorage
            var isCollapsed = $sidebar.hasClass('collapsed');
            localStorage.setItem('sidebarCollapsed', isCollapsed);
        });

        // Restore sidebar state from localStorage
        $(document).ready(function() {
            var isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
            if (isCollapsed) {
                $('#sidebar').addClass('collapsed');
                $('main.main-content-wrapper').addClass('sidebar-collapsed');
                $('#sidebarToggle').removeClass('active');
            }

            // Load sidebar menu dynamically
            loadSidebarMenu();
        });

        // Load Sidebar Menu from API
        function loadSidebarMenu() {
            $.ajax({
                url: '@Url.Action("GetSidebarMenu", "Home")',
                method: 'GET',
                dataType: 'json',
                success: function(data) {
                    console.log('Sidebar menu loaded:', data);
                    renderSidebarMenu(data);
                },
                error: function(xhr, status, error) {
                    console.error('ERROR loading sidebar menu:', error);
                    $('#sidebarMenuList').html('<li class="text-center p-3 text-danger"><i class="bi bi-exclamation-triangle"></i> Menü yüklenemedi</li>');
                }
            });
        }

        // Render Sidebar Menu
        function renderSidebarMenu(institutions) {
            var html = '';

            institutions.forEach(function(institution) {
                // Kurum için ID oluştur (boşlukları ve Türkçe karakterleri temizle)
                var institutionId = institution.name.toLowerCase()
                    .replace(/ü/g, 'u').replace(/ğ/g, 'g').replace(/ş/g, 's')
                    .replace(/ı/g, 'i').replace(/ö/g, 'o').replace(/ç/g, 'c')
                    .replace(/\s+/g, '-').replace(/[^a-z0-9-]/g, '');

                html += '<li class="sidebar-menu-item">';
                html += '<button class="sidebar-menu-link" data-toggle="collapse" data-target="' + institutionId + '">';
                html += '<span>' + institution.name.toUpperCase() + '</span>';
                html += '<i class="bi bi-chevron-right sidebar-menu-icon"></i>';
                html += '</button>';
                html += '<ul class="sidebar-submenu" id="' + institutionId + '">';

                // Fakülteleri ve bölümleri listele
                institution.faculties.forEach(function(faculty) {
                    faculty.departments.forEach(function(department) {
                        html += '<li class="sidebar-submenu-item">';
                        html += '<a href="@Url.Action("DepartmentInstructors", "Home")?id=' + department.id + '" class="sidebar-submenu-link">';
                        html += department.name;
                        html += '</a>';
                        html += '</li>';
                    });
                });

                html += '</ul>';
                html += '</li>';
            });

            $('#sidebarMenuList').html(html);

            // Re-attach event handlers after dynamic content load
            $('.sidebar-menu-link').on('click', function(e) {
                e.preventDefault();

                var $button = $(this);
                var targetId = $button.data('target');
                var $submenu = $('#' + targetId);

                // Toggle the submenu
                $submenu.toggleClass('show');

                // Toggle the icon rotation
                $button.toggleClass('expanded');

                // Close other submenus (optional - for accordion style)
                $('.sidebar-submenu').not($submenu).removeClass('show');
                $('.sidebar-menu-link').not($button).removeClass('expanded');
            });
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
